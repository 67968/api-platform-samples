<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- We'll use this API product to denote free API access -->
<ApiProduct name="FreeProduct">
    <ApiResources>
      <ApiResource>/**</ApiResource>
    </ApiResources>
    <ApprovalType>auto</ApprovalType>
    <Attributes>
        <Attribute>
            <Name>description</Name>
            <Value>Free access to the API, with a very low quota</Value>
        </Attribute>
        <Attribute>
	    <!-- This is used by the Developer Connect portal to manage access to the docs -->
            <Name>access</Name>
            <Value>public</Value>
        </Attribute>
        <Attribute>
	    <!-- This specifies whether new API keys requested by the portal are automatically approved -->
            <Name>approveKeysMode</Name>
            <Value>automatically</Value>
        </Attribute>
        <Attribute>
            <Name>keysPerResource</Name>
            <Value>single</Value>
        </Attribute>
        <Attribute>
            <Name>apisDeployedIn</Name>
            <Value>both</Value>
        </Attribute>
        <Attribute>
            <!-- We will use this value in our quota policy -->
            <Name>developer.quota.limit</Name>
            <Value>2</Value>
        </Attribute>
        <Attribute>
            <!-- We will use this value in our quota policy -->
            <Name>developer.quota.timeunit</Name>
            <Value>minute</Value>
        </Attribute>
        <Attribute>
            <!-- We will use this value in our quota policy -->
            <Name>developer.quota.interval</Name>
            <Value>1</Value>
        </Attribute>
        <Attribute>
            <Name>servicePlan</Name>
            <Value>silver</Value>
        </Attribute>
    </Attributes>
    <Description>Free API Product</Description>
    <DisplayName>Free API Product</DisplayName>
    <Scopes>
        <Scope>READ</Scope>
    </Scopes>
</ApiProduct>
