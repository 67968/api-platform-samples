<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    <xs:include schemaLocation="common_definitions.xsd"/>

    <xs:element name="ApiProducts">
        <xs:complexType>
            <xs:sequence>
                <xs:element ref="ApiProduct" minOccurs="0" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="ApiProduct">
        <xs:complexType>
            <xs:all>
                <xs:element ref="ApiResources" minOccurs="0"/>
                <xs:element name="DisplayName" type="xs:string"/>
                <xs:element name="Description" type="xs:string"/>
                <xs:element ref="Scopes" minOccurs="0"/>
                <xs:element ref="Attributes" minOccurs="0"/>
                <xs:element name="CreatedAt" type="xs:long"/>
                <xs:element name="CreatedBy" type="xs:string"/>
                <xs:element name="LastModifiedAt" type="xs:long"/>
                <xs:element name="LastModifiedBy" type="xs:string"/>
                <xs:element name="ApprovalType" type="ApprovalTypeDef"/>
            </xs:all>
            <xs:attribute name="name" use="required" type="xs:string"/>
        </xs:complexType>
    </xs:element>

    <xs:element name="ApiResources">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="ApiResource" minOccurs="0" maxOccurs="unbounded" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:element name="Scopes">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Scope" minOccurs="0" maxOccurs="unbounded" type="xs:string"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <xs:simpleType name="ApprovalTypeDef">
        <xs:restriction base="xs:string">
            <xs:enumeration value="manual"/>
            <xs:enumeration value="auto"/>
        </xs:restriction>
    </xs:simpleType>

</xs:schema>